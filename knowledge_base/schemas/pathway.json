{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "name", "genes", "provenance"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Pathway identifier"
    },
    "name": {
      "type": "string",
      "description": "Pathway name"
    },
    "description": {
      "type": "string",
      "description": "Pathway description"
    },
    "genes": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Gene symbols in pathway"
    },
    "diseases": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Associated diseases"
    },
    "drug_targets": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Known drug targets in pathway"
    },
    "mechanism": {
      "type": "string",
      "description": "Pathway mechanism description"
    },
    "helper_copy": {
      "type": "string",
      "description": "What this tells you - user-friendly explanation"
    },
    "provenance": {
      "type": "object",
      "required": ["source", "created_at"],
      "properties": {
        "source": {"type": "string"},
        "created_at": {"type": "string", "format": "date-time"},
        "sha256": {"type": "string"},
        "curator": {"type": "string"},
        "license": {"type": "string"}
      }
    }
  }
}



